<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_city"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="com.example.ly.weather.selectCity">

    <RelativeLayout
        android:id="@+id/city_select_title"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/title_curcity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:textSize="30dp"/>
        <ImageView
            android:id="@+id/title_back"
            android:layout_width="35.0dip"
            android:layout_height="35.0dip"
            android:src="@drawable/back_icon"
            android:layout_alignParentLeft="true"
            />
    </RelativeLayout>

    <EditText
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city_select_title"
        android:layout_marginTop="10dp"

        android:hint="请输入城市名搜索"
        android:maxLines="1"
        android:textSize="32dp"/>
    <TextView
        android:id="@+id/locatedcity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:textSize="30dp"
        android:background="#8952b3dc"/>
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/locatedcity"
        android:divider="#a45082d1"
        android:dividerHeight="8dp"></ListView>
</RelativeLayout>
